/* pages/home/home.wxss */
.search-bg{
  position: relative;
  padding: 12rpx 0;
}

.search-input{
  position: relative;
  width: 90%;
  margin: 0 auto;
  border-bottom: 2rpx solid #ccc;
  color:#000;
}

.search-input:after{
  content: "";
  display: block;
  clear: both;
}

.search-input input{
  position: relative;
  float: left;
  font-size: 28rpx;
}

.search-input icon{
  position: relative;
  top: 4rpx;
  float: right;
}
/*搜索样式end*/