/* pages/shopping_bag/shopping_bag.wxss */
.shop-bag-content{
  position: relative;
  background: #f6f6f6;
  padding-top: 1px;
}

.shop-bag-bag{
  position: relative;
  padding: 0 5%;
  margin-top: 20rpx;
  background: #fff;
}

.shop-bag-txt{
  position: relative;
  padding: 60px 0;
  font-size: 28rpx;
  text-align: center;
}

/*购物车列表项*/
.shop-bag-list{
  position: relative;
  margin-bottom: 30px;
}

.shop-bag-list-item{
  position: relative;
  padding-top: 24rpx;
  overflow: hidden;
}

.shop-bag-list-item-chackbox{
  position: relative;
  float: left;
  width: 10%;
}

.shop-bag-list-item-img{
  position: relative;
  float: left;
  width: 25%;
  margin: 0 5% 0 2%; 
}

.shop-bag-list-item-img image{
  position: relative;
  display: block;
  width: 100%;
}

.shop-bag-list-item-txt{
  position: relative;
  font-size: 24rpx;
  float: left;
  width: 58%;
}

.shop-bag-list-item-txt view{
  position: relative;
}

.shop-bag-list-item-txt .shop-bag-list-item-txt-name{
  padding: 12rpx 0 8rpx;
}

.shop-bag-list-item-txt .shop-bag-list-item-txt-size,.shop-bag-list-item-txt .shop-bag-list-item-txt-color{
  padding: 8rpx 0;
}

.shop-bag-list-item-price{
  position: relative;
  margin-top: 20px;
}

.shop-bag-list-item-price:after{
  content: "";
  display: block;
  clear: both;
}

.shop-bag-list-item-num{
  position: relative;
  float: left;
  width: 58%;
}

.shop-bag-list-item-num:after{
  content: "";
  display: block;
  clear: both;
}
.shop-bag-list-item-num view{
  position: relative;
  float: left;
  border: none;
  background: none;
  width: calc(100%/3);
  box-sizing: border-box;
  text-align: center;
  height: 26px;
  line-height: 24px;
}

.shop-bag-list-item-num view{
  border: 2rpx solid #f3f3f3;
}


.shop-bag-list-item-price-txt{
  position: relative;
  float: right;
  line-height: 26px;
  font-weight: bold;
}

.shop-bag-list-item-num-input input{
  height: 26px;
  min-height: 26px;
}

.shop-bag-list-item-change{
  position: relative;
  padding: 20px 0;
  border-bottom: 2rpx solid #f5f5f5;
  overflow: hidden;
}

.shop-bag-list-item-change-txt{
  position: relative;
  float: right;
  width: 58%;
  font-size: 24rpx;
  color: #d7caac;
  overflow: hidden;
}

.shop-bag-list-item-change-txt-del{
  position: relative;
  float: left;
}

.shop-bag-list-item-change-txt-amend{
  position: relative;
  float: right;
}

/*购物车结算*/
.shop-bag-account{
  position: relative;
  font-size: 24rpx;
}

.shop-bag-account-txt{
  position: relative;
  padding: 10rpx 0;
}

.shop-bag-account-txt:after{
  content: "";
  display: block;
  clear: both;
}

.shop-bag-account-txt-left{
  position: relative;
  float: left;
}

.shop-bag-account-txt-right{
  position: relative;
  float: right;
  text-align: right;
}